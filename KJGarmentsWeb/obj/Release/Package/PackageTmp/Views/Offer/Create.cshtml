    $(document).on('click','#btnSubmit',function() {  
       
      
        var from = $("#StartDate").val();
        var to = $("#EndDate").val();     
        var fullDate = new Date();
       
        var twoDigitMonth = fullDate.getMonth()+1 + "";
      
        if (twoDigitMonth.length == 1) twoDigitMonth = "0" + twoDigitMonth;
        var twoDigitDate = fullDate.getDate() + "";
        if (twoDigitDate.length == 1) twoDigitDate = "0" + twoDigitDate;
        var currentDate = fullDate.getFullYear() + "-" + twoDigitMonth + "-" + twoDigitDate;
      
        if (Date.parse(from) < Date.parse(currentDate)) {
            document.getElementById("divStartDate").style.visibility = "visible";
            $("input[type=text]").first().focus();
            return false;
        }
        else {
            document.getElementById("divStartDate").style.visibility = "hidden";
        }
        if (Date.parse(from) > Date.parse(to)) {
            document.getElementById("divEndDate").style.visibility = "visible";
            $("input[type=text]").first().focus();
            return false;
        }
        else {
            document.getElementById("divEndDate").style.visibility = "hidden";
        }
        if ($("#MaxQty").val() < $("#MinQty").val()) {
            document.getElementById("divMaxqty").style.visibility = "visible";
            $("input[type=text]").first().focus();
            return false;
        }
        else {
            document.getElementById("divMaxqty").style.visibility = "hidden";
        }

        $.post('@Url.Action("ChkOfferValid", "Offer")', { "fromdate": from,"todate": to },
