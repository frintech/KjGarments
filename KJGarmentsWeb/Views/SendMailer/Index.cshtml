<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <script>
        function initialize() {
            var myLatlng = new google.maps.LatLng(13.060713, 80.244014);
            var mapOptions = {
                zoom: 15,
                center: myLatlng
            }
            var map = new google.maps.Map(document.getElementById('map-canvassing'), mapOptions);

            var marker = new google.maps.Marker({
                position: myLatlng,
                map: map,
                title: 'Kj Fashions!'
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);

        function initializekar() {
            var myLatlng = new google.maps.LatLng(13.060713, 80.244014);
            var mapOptions = {
                zoom: 10,
                center: myLatlng
            }
            var map = new google.maps.Map(document.getElementById('map-canvaskar'), mapOptions);

            var marker = new google.maps.Marker({
                position: myLatlng,
                map: map,
                title: 'Kj Fashions!'
            });
        }

        google.maps.event.addDomListener(window, 'load', initializekar);

    </script>
