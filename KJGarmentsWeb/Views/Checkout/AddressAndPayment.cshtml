                                                <form action="#" method="post" class="send-message">
                                                    <div class="row">
                                                    <div class="name col-md-4">
                                                        @*<input type="text" name="name" id="name" placeholder="Name" />*@
                                                         @Html.TextBoxFor(model => model.Customer_name,null, new { @placeholder="Name" })
