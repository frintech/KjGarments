                                                    </div>
                                                    <div class="email col-md-4">
                                                        @*<input type="text" name="email" id="email" placeholder="Email" />*@
                                                        @Html.TextBoxFor(model => model.Emailid,null, new { @placeholder="Email" })
                                                        @Html.ValidationMessageFor(model => model.Emailid)
                                                    </div>
                                                    <div class="subject col-md-4">
                                                        @*<input type="text" name="subject" id="subject" placeholder="Mobile" />*@
                                                         @Html.TextBoxFor(model => model.mobileNo,null, new { @placeholder="Mobile" })
                                                         @Html.ValidationMessageFor(model => model.mobileNo)
                                                    </div>
                                                    </div>
                                                    <div class="row">        
                                                        <div class="text col-md-12 mrg-top-20">
                                                            @*<textarea name="text" placeholder="Address"></textarea>*@                                                            
                                                            @Html.TextAreaFor(model => model.Customer_Address, new { @placeholder="Address"  })
                                                            @Html.ValidationMessageFor(model => model.Customer_Address)
                                                        </div>   
                                                    </div>                              
                                                    <div class="send">
                                                        <button type="submit">Submit</button>
                                                    </div>
                                                </form>
